@model IEnumerable<MovieRecommendationApi.Dtos.ReadMovieDto>
@{
    ViewData["Title"] = "Recommended Movies";
}

<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <a class="btn btn-sm btn-primary m2 p2" asp-action="AddMovie" asp-controller="Consume">Add Movie</a>
            <table class="table table-bordered table-striped table-hover">
                <thead class="bg-dark text-light text-center">
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Genre</th>
                       
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model.Count() > 0)
                    {
                        @foreach (var d in Model)
                        {
                            <tr>
                                <td>@d.ID</td>
                                <td>@d.Title</td>
                                <td>@d.Description</td>
                                <td>@d.Genre</td>
                                
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="text-center">
                            <td colspan="5"><h2 class="text-warning bg-info">No Record</h2></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>